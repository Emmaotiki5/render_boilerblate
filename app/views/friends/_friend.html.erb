<table class="table table-light table-striped table-hover table-bordered">
  <thead>
    <tr class="table-dark ">
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone No</th>
      <th>Twitter</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.phone_no %></td>
      <td><%= friend.twitter %></td>
      <td><%= friend.email %></td>
      <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-secondary" %></td>
      <td><%= button_to "Destroy this friend", friend, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></td>
    </tr>
  </tbody>
</table>
