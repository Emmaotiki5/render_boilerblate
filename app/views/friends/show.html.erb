<div class="card border-dark">
  <div class="card-body">
    <div class="row align-items-center">
      <div class="col-md-4 text-center">
        <%= image_tag(@friend.image, class: "img-fluid rounded-circle border", style: "max-width: 150px; height: auto;") if @friend.image.attached? %>
      </div>
      <div class="col-md-8">
        <h1 class="card-title"><%= @friend.first_name %> <%= @friend.last_name %></h1>
        <ul class="list-unstyled">
          <li><strong>Email:</strong> <%= @friend.email %></li>
          <li><strong>Phone Number:</strong> <%= @friend.phone_no %></li>
          <li><strong>Twitter:</strong> <%= @friend.twitter %></li>
        </ul>
        <div class="mt-4 text-center">
          <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-sm btn-primary me-2" %>
          <%= link_to "Back to friends", friends_path, class: "btn btn-sm btn-primary me-2" %>
          <%= button_to "Destroy this friend", @friend, method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger mt-2" %>
        </div>
      </div>
    </div>
  </div>
</div>
