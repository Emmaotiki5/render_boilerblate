<div data-controller="imgpreview">
  <%= form.label :image, class: "form-label" %>
  <%= form.file_field :image,
    direct_upload: true,
    data: { imgpreview_target: 'input', action: "change->imgpreview#preview" },
    class: "form-control w-25" %>
  <br>
  <% if expert.image.attached? %>
    <%= image_tag expert.image, class: "w-auto mx-auto",style: "height:15em;", data: { imgpreview_target: 'preview' } %>
  <% else %>
    <%= image_tag '', data: { imgpreview_target: "preview"} %>
  <% end %>
</div>
